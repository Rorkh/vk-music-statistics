{
  "browser_action": {
    "browser_style": true,
    "default_title": "Статистика прослушиваний VK",
    "default_popup": "window/window.html"
  },

  "name": "Music Statistics VK",
  "description": "Music Statistics VK",
  "version": "1.1",
  "manifest_version": 2,

  "content_scripts": [
    {
      "matches": ["*://vk.com/*"],
      "js": ["js/content.js"]
    }
  ],

  "permissions": [
    "tabs",
    "storage"
  ]
}